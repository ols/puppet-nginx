server {
  listen <%= listen %>;
  <% if server_name %>server_name <%= server_name %>;<% end %>
  <% if root %>root <%= root %>;<% end %>

  <% locations.each do |location| %>
    <% location.each do |name,options| %>
      location <%= name %> {
        <% options.each do |option,value| %>
          <%= option %> <%= value %>;
        <% end %>
      }
    <% end %>
  <% end %>
}
